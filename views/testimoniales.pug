extends ./layout/index

block content
    main.container.mt-5
        h1.mt-5.text-center #{page}
        .row

            h2.d-block.w-100.text-center Agrega un testimonio

            .row.justify-content-center.col
                .col-md-8
                    form(action="" method='POST')
                        .form-group
                            label(for='nombre') Nombre
                            input#nombre.form-control(type='text' placeholder='Tu Nombre' name='nombre' required)
                        .form-group
                            label(for='correo') Correo
                            input#correo.form-control(type='email' placeholder='Tu Correo' name='correo' required)
                        .form-group
                            label(for='mensaje') Mensaje
                            textarea#mensaje.form-control(name='mensaje' placeholder='Tu Mensaje' rows=3 required)

                        input.btn.btn-success.btn-block(type='submit' value='Enviar')